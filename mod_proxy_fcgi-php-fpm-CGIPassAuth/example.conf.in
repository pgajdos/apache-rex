# https://wiki.apache.org/httpd/PHP-FPM
<Location />
  AuthType Basic
  AuthBasicProvider file
  AuthName "Restricted Area"
  AuthUserFile @AREX_RUN_DIR@/htpasswd
  Require valid-user
  CGIPassAuth on
</Location>
ProxyPassMatch ^/(.*\.php)$ fcgi://127.0.0.1:@AREX_FCGI_PORT@/@AREX_DOCUMENT_ROOT@/$1

